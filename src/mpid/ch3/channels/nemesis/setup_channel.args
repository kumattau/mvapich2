
if test -z "${channel_args}" ; then
    nemesis_network="tcp"
else
    case "${channel_args}" in
	elan | gm | mx | tcp | newtcp | sctp | ib | none )
	    nemesis_network=${channel_args}
	    ;;
	* )
	    echo "ERROR: invalid network type for Nemesis channel ($channel_args)"
	    exit 1
	    ;;
    esac
fi

